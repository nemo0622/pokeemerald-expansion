script PetalburgCity_EventScript_MerchantBrotherLeft
{

	lockall
	faceplayer

	if(!flag(FLAG_SPOKE_TO_PETALBURG_BROTHERS))
	{
		applymovement(10, Common_Movement_ExclamationMark)
		waitmovement(0)
		msgbox(format("Pedro: Aha! A new customer! I knew moving in front of the GYM would be good for business!"))
		closemessage
		applymovement(11, Common_Movement_WalkInPlaceFasterLeft)
		waitmovement(0)
		msgbox(format("Nico: Hehehe! Let's get down to business!"))
		closemessage
		applymovement(11, Common_Movement_FaceOriginalDirection)
		msgbox(format("Pedro: Way ahead of you! Welcome to the HAPPY TRAINER MERCHANT STAND!"))
		closemessage
		msgbox(format("We sell goods to TRAINERS based on their GYM badges! More badges means more stuff for you, and more money- I mean, more business for us!\N I sell items to boost POKéMON battle skills, and Nico here sells goods to influence POKéMON stats."))
		closemessage
		msgbox(format("Pedro: Now, with all that out of the way..."))
		closemessage
		setflag(FLAG_SPOKE_TO_PETALBURG_BROTHERS)
	}

	msgbox(format("Pedro: Hey hey, TRAINER! What do you need?"))
	waitmessage

	if(!flag(FLAG_BADGE01_GET)) // No badges yet
	{
		pokemart(PetalburgCity_Mart_PedroBadge0)
	}
	elif(flag(FLAG_BADGE01_GET) && !flag(FLAG_BADGE02_GET)) // Only has badge 1
	{
