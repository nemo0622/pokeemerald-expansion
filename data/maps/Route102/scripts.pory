script Route102_Pokemon_Farfetchd
{
	lock
	faceplayer
	playmoncry(SPECIES_FARFETCHD, CRY_MODE_NORMAL)
	msgbox(format("Kree!"))
	waitmoncry
	closemessage
	release
	end
}

